class FAQManager:
    def __init__(self, faq_loader):
        self.faq_loader = faq_loader  # Injected dependency (Dependency Injection)
        self.faqs = self.faq_loader.load_faqs()

    def get_answer(self, question):
        for faq in self.faqs:
            if faq.question.lower() == question.lower():
                return faq.answer
        return "Sorry, I couldn't find an answer to your question."
